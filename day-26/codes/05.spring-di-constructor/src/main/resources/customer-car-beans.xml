<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <bean id="bmw" class="com.spg.spring.core.beans.Car">
    	<property name="model" value="B M W"/>
    	<property name="cost" value="7800000.0"/>
    </bean>  
    
    <bean id="sandeep" class="com.spg.spring.core.beans.Customer">
        <constructor-arg value="Sandeep Patil"></constructor-arg>
    	<constructor-arg ref="audi"></constructor-arg>    	
    </bean>  
    
    <bean id="audi" class="com.spg.spring.core.beans.Car">
    	<property name="model" value="Audi"/>
    	<property name="cost" value="9275000.00"/>
    </bean>   
    
    <bean id="rahul" class="com.spg.spring.core.beans.Customer">
       <constructor-arg ref="bmw"></constructor-arg> 
       <property name="customerName" value="Rahul Moorthy"/>   	
    </bean>            
</beans>        